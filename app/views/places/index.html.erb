<h1>Listing places</h1>

<table>
  <tr>
    <th>District</th>
    <th>Name</th>
    <th>Address</th>
    <th>Longitud</th>
    <th>Latitude</th>
    <th>Phone</th>
    <th>Imagen</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.district.name %></td>
    <td><%= place.name %></td>
    <td><%= place.address %></td>
    <td><%= place.longitud %></td>
    <td><%= place.latitude %></td>
    <td><%= place.phone %></td>
    <td><%= place.imagen %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

